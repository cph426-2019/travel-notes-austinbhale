<div class="header-ctr hdr-{{post.id}}">
    <div class="header">
        <div class="nav-header"><a class="nav-link" href="/">Austin's Notes</a></div>
        <div class="nav">
            <div class="nav-item"><a class="nav-link" href="/about-me">About Me</a></div>
            <div class="nav-item"><a class="nav-link" href="/bucket-list">Bucket List</a></div>
            <div class="nav-item"><a class="nav-link" href="/gallery">Photos</a></div>
        </div>
    </div>
    <div id="openButton" class="open-button">
        <div></div>
    </div>
    <div class="header-mobile">
        <a id="homeLink" href="/">Austin's Notes</a>
    </div>
</div>
<div class="section content">
    <h1 class="content-title">{{post.title}}</h1>
    <hr />
    <div class="blog-post" id={{post.id}}>
        <p class="content-date"><em>{{post.publishAt}}</em></p>
        <div class="content-body">
            <p>{{{post.body}}}</p>
        </div>
    </div>
</div>