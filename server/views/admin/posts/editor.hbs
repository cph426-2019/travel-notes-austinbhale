<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/posts">Posts</a></li>
        <li class="breadcrumb-item active" aria-current="page">
            {{#if post.id }}
                {{ post.title }}
            {{else}}
                New
            {{/if}}
        </li>
    </ol>
</nav>

<form action="{{ action }}" method="POST">
    {{#if message }}
        <div class="alert alert-dark">{{ message }}</div>
    {{/if}}
    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="md-textarea form-control" rows="15" name="body">
            {{{ post.body }}}
        </textarea>
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="{{ post.title }}">
        <small class="form-text text-muted">Enter a title for your blog post.</small>
        <input type="datetime-local" name="publishAt" id="publishAt" class="form-control" value="{{ post.publishAt }}">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/admin/posts" class="btn btn-secondary">Back</a>
</form>
{{#if post.id }}
    <hr>
    <form action="{{ action }}/delete" method="POST" onsubmit="return confirm('Are you sure?')">
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
    </form>
{{/if}}