<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Blog Posts</li>
    </ol>
</nav>
<h2 class="pt-2">Blog Posts <a href="/admin/posts/new" class="btn btn-sm btn-light">New</a></h2>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr><th>Actions</th><th>ID</th><th>Title</th><th>Published At</th><th>Body</th></tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td><a href="/admin/posts/{{ id }}" class ="btn btn-sm btn-primary">Edit</a></td>
            <td>{{ id }}</td>
            <td>{{ title }}</td>
            <td>{{ publishAt }}</td>
            <td>{{{ body }}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>